# Telegram app credentials from https://my.telegram.org
TG_API_ID=
TG_API_HASH=

# Path to Telethon session file (without .session extension)
TG_SESSION=
TARGETS_FILE=targets.txt

# Your destination channel
TARGET_CHAT=


# Matching rules
INCLUDE_KEYWORDS=wildberries,wb,распродажа,скидка,хит,кэшбек,кешбек
EXCLUDE_KEYWORDS=опт,реклама,вакансия
MIN_SCORE=3

# Duplicate protection
DEDUP_STORE_FILE=sessions/dedup_hashes.txt
DEDUP_MAX_ITEMS=5000

# Backfill on startup
BACKFILL_HOURS=1
BACKFILL_LIMIT_PER_CHAT=200

# true => no publish, only logs
DRY_RUN=false

# AI rewrite
REWRITE_WITH_AI=false
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_PROXY=
